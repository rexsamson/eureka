        <%= render 'shared/errors', obj: @product_setting %>
        
        
        <div class="row">
            <%= simple_form_for @product_setting do |f|  %>
            	<div class="col-sm-12">
            		<div class="form-group">
            			<%= f.input :code, hint: false,:error => false %>
            		</div>
            	</div>
            	<div class="col-sm-12">
            		<div class="form-group">
            			<%= f.input :name, hint: false,:error => false %>
            		</div>
            	</div>
            	<div class="col-sm-6">
            		<div class="form-group">
            			<%= f.input :product_type, 
            			    :collection => [['Product Brand','Brand'],['Product Size','Size'],['Product Motif','Motif'],['Product Type','Type'],['Product Density','Density'],['Product Color','Color'],['Product Quality','Quality']],
            			    as: :radio_buttons %>
            		</div>
            	</div>

            	<div class="col-sm-12">
                	<div class="text-right btn-toolbar">
                		<%= link_to raw("<i class=\"fa fa-times\" aria-hidden=\"true\"></i> Cancel"), product_settings_path , :class => "btn btn-danger btn-flat pull-right" %> 
                		<%= button_tag( :class => "btn btn-success btn-flat pull-right") do %>
            			  <i class="fa fa-check" aria-hidden="true"></i> Submit 
            			<% end %>
                	</div>
            	</div>
            <%end %>
        </div>