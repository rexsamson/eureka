<section class="content-header">
	<h1>Branches <small>List</small></h1>
	<ol class="breadcrumb">
		<li>
			<a href="#"><i class="fa fa-dashboard"></i> Home</a>
		</li>
		<li>
			<a href="#">Branches</a>
		</li>
		<li class="active">Index page</li>
	</ol>
</section><!-- Main content -->
<section class="content">
	<%= render 'shared/flash' %>
	<!-- ========================================== -->
	<div class="box box-danger">
		<!-- /.box-header -->
		<div class="box-header">
         <%= link_to "Create a Branch", new_branch_path, :class => "btn btn-primary btn-flat ", :rel => "tabs" %>
        </div>
		<div class="box-body no-padding">
			<table class="table table-bordered">
				<tbody>
					<tr>
						<th style="width: 50px">Code</th>
						<th>Name</th>
						<th>Region</th>
						<th style="width: 140px">City</th>
						<th style="width: 80px">Telp</th>
						<th style="width: 170px">Contact</th>
						<th style="width: 170px">Update</th>
						<th style="width: 170px">Action</th>
					</tr>
					<tr><%@branches.each do |branch| %>
						<td><%= branch.code %></td>
						<td><%= branch.name %></td>
						<td><%= branch.region %></td>
						<td><%= branch.city %></td>
						<td><%= branch.telp %></td>
						<td><%= branch.cp %></td>
						<td><%= branch.updated_at %></td>
						<td><%= link_to "Show", branch_path(branch), :class => "btn btn-success btn-sm btn-flat", :rel => "tabs" %>
						<%= link_to "Edit", edit_branch_path(branch), :class => "btn btn-warning btn-sm btn-flat", :rel => "tabs" %> 
						<%= link_to "Delete",branch_path(branch), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger btn-sm btn-flat", :rel => "tabs" %></td>
					</tr><%end %>
				</tbody>
			</table>
		</div><!-- /.box-body -->
		<div class="box-footer no-padding">
			<p></p>
		</div>
	</div><!-- /.box-end -->
	<!-- ========================================== -->
</section>
