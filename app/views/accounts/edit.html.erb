<section class="content-header">
	<h1>Company Profile <small>Edit</small></h1>
	<ol class="breadcrumb">
		<li>
			<a href="#"><i class="fa fa-dashboard"></i> Home</a>
		</li>
		<li>
			<a href="#">Chart of Accounts</a>
		</li>
		<li class="active">Edit page</li>
	</ol>
</section><!-- Main content -->
<section class="content">
	<!-- Default box -->
	<%flash.each do |name, msg| %>
	<div class="alert alert-success alert-dismissible" id="success-alert">
		<button aria-hidden="true" class="close" data-dismiss="alert" type="button">×</button>
		<h4><i class="icon fa fa-check"></i> Success</h4>
		<ul>
			<li><%= msg %></li>
		</ul>
	</div><%end %>
	<div class="box">
		<div class="box-header with-border">
			<h3 class="box-title">Edit header</h3>
		</div><!--content-->
		<div class="box-body">
			<%if @account.errors.any? %>
			<div class="alert alert-danger alert-dismissible">
				<button aria-hidden="true" class="close" data-dismiss="alert" type="button">×</button>
				<h4><i class="icon fa fa-warning"></i> Error, Cannot save to database</h4>
				<ul>
					<%@account.errors.full_messages.each do |msg| %>
					<li><%= msg %></li><%end %>
				</ul>
			</div><%end %><%= form_for @account do |f|  %>
			<div class="row">
				<form role="form">
					
					<div class="col-sm-12">
						<div class="form-group">
							<%= f.label :code %><%= f.text_field :code, :class => "form-control" %>
						</div>
					</div>
					<div class="col-sm-12">
						<div class="form-group">
							<%= f.label :label %><%= f.text_field :label, :class => "form-control"  %>
						</div>
					</div>
					<div class="col-sm-12">
						<div class="form-group">
							<%= f.label :dk %><%= f.text_field :dk, :class => "form-control"  %>
						</div>
					</div>
					<div class="col-sm-12">
						<div class="form-group">
							<%= f.label :du %><%= f.text_field :du, :class => "form-control"  %>
						</div>
					</div>
					<div class="col-sm-12">
						<div class="form-group">
							<%= f.label :header %><%= f.text_field :header, :class => "form-control"  %>
						</div>
					</div>
					<div class="col-sm-12">
						<div class="form-group">
							<%= f.label :description %><%= f.text_area :description, :class => "form-control" %>
						</div>
					</div><br>
					<div class="col-sm-12">
						<%= f.submit "Save", :class => "btn btn-primary btn-sm", :rel => "tabs" %> 
						<%= link_to "Back", accounts_path , :class => "btn btn-warning btn-sm", :rel => "tabs" %>
					</div><%end %>
				</form>
			</div>
		</div><!-- /.box-body -->
		<!--<div class="box-footer">
Footer
</div>-->
		<!-- /.box-footer-->
		<!--/content-->
	</div><!-- /.box -->
</section>
