<%if @account.errors.any? %>
<div class="alert alert-danger alert-dismissible">
	<button aria-hidden="true" class="close" data-dismiss="alert" type="button">Ã—</button>
	<h4><i class="icon fa fa-warning"></i> Error, Please make sure all required fields are filled out correctly!</h4>
	<ul>
		<%@account.errors.full_messages.each do |msg| %>
		<li><%= msg %></li><%end %>
	</ul>
</div>
<%end %>
<div class="row">
    <%= form_for @account do |f|  %>
    <form role="form">
    	<div class="col-sm-12">
    		<div class="form-group">
    			<%= f.label :code %><%= f.text_field :code, :class => "form-control" %>
    		</div>
    	</div>
    	<div class="col-sm-12">
    		<div class="form-group">
    			<%= f.label :label %><%= f.text_field :label, :class => "form-control"  %>
    		</div>
    	</div>
    	<div class="col-sm-12">
    		<div class="form-group">
    			<%= f.label :dk %><%= f.text_field :dk, :class => "form-control"  %>
    		</div>
    	</div>
    	<div class="col-sm-12">
    		<div class="form-group">
    			<%= f.label :du %><%= f.text_field :du, :class => "form-control"  %>
    		</div>
    	</div>
    	<div class="col-sm-12">
    		<div class="form-group">
    			<%= f.label :header %><%= f.text_field :header, :class => "form-control"  %>
    		</div>
    	</div>
    	<div class="col-sm-12">
    		<div class="form-group">
    			<%= f.label :description %><%= f.text_area :description, :class => "form-control" %>
    		</div>
    	</div>
    	<div class="col-sm-12">
    		<div class="form-group">
    			<%= f.label :id_branch %><%= f.text_area :id_branch, :class => "form-control" %>
    		</div>
    	</div><br>
    	<div class="col-sm-12">
    		<%= f.submit "Save", :class => "btn btn-primary btn-sm", :rel => "tabs" %> 
    		<%= link_to "Back", accounts_path , :class => "btn btn-warning btn-sm", :rel => "tabs" %>
    	</div>
    </form><%end %>
</div>