		<section class="content-header">
			 <%= link_to raw("<i class=\"fa fa-plus\" aria-hidden=\"true\"> </i> Create New Account"), new_account_path, :class => "btn btn-primary btn-flat "%>
			<ol class="breadcrumb">
				<li>
					<a href="#"><i class="fa fa-dashboard"></i> Home</a>
				</li>
				<li>
					<a href="#">Chart of Accounts</a>
				</li>
				<li class="active">Index page</li>
			</ol>
		</section><!-- Main content -->
		<section class="content">
			<%= render 'shared/flash' %>
			<!-- ========================================== -->
			<div class="box">
				<!-- /.box-header -->
				<div class="box-header">
	            	<h3 class="box-title">Chart of Accounts (CoA)</h3>
	            </div>
				<div class="box-body padding-xs">
					<table id="dttable" class="table table-bordered table-hover">
						<thead>
							<tr>
								<th style="width: 100px">Code</th>
								<th>Accounts</th>
								<th style="width: 10px">D/K</th>
								<th style="width: 80px">D/U</th>
								<th style="width: 80px">Header</th>
								<th>Description</th>
								<th style="width: 170px">Update</th>
								<th style="width: 130px">Action</th>
							</tr>
							</thead>
							</tbody>
							<tr><%@accounts.each do |account| %>
								<td><%= account.code %></td>
								<td><%= account.label %></td>
								<td><%= account.dk %></td>
								<td><%= account.du %></td>
								<td><%= account.header %></td>
								<td><%= account.description %></td>
								<td><%= account.updated_at %></td>
								<td><%= link_to raw("<i class=\"fa fa-eye\" aria-hidden=\"true\"></i>"), account_path(account), :class => "btn btn-success btn-sm ", :rel => "tabs" %>
								<%= link_to raw("<i class=\"fa fa-edit\" aria-hidden=\"true\"></i>"), edit_account_path(account), :class => "btn btn-warning btn-sm", :rel => "tabs" %> 
								<%= link_to raw("<i class=\"fa fa-gavel\" aria-hidden=\"true\"> </i>"), account_path(account), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger btn-sm", :rel => "tabs" %></td>
							</tr><%end %>
						</tbody>
					</table>
