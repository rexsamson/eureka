		<section class="content-header">
			<h1>Chart of Accounts <small>List</small></h1>
			<ol class="breadcrumb">
				<li>
					<a href="#"><i class="fa fa-dashboard"></i> Home</a>
				</li>
				<li>
					<a href="#">Chart of Accounts</a>
				</li>
				<li class="active">Index page</li>
			</ol>
		</section><!-- Main content -->
		<section class="content">
			<%= render 'shared/flash' %>
			<!-- ========================================== -->
			<div class="box">
				<!-- /.box-header -->
				<div class="box-header">
		         <%= link_to "Create a Account", new_account_path, :class => "btn btn-primary btn-flat ", :rel => "tabs" %>
		        </div>
				<div class="box-body no-padding">
					<table class="table table-bordered">
						<tbody>
							<tr>
								<th style="width: 100px">Code</th>
								<th>Accounts</th>
								<th style="width: 10px">D/K</th>
								<th style="width: 80px">D/U</th>
								<th style="width: 80px">Header</th>
								<th>Description</th>
								<th style="width: 170px">Update</th>
								<th style="width: 170px">Action</th>
							</tr>
							<tr><%@accounts.each do |account| %>
								<td><%= account.code %></td>
								<td><%= account.label %></td>
								<td><%= account.dk %></td>
								<td><%= account.du %></td>
								<td><%= account.header %></td>
								<td><%= account.description %></td>
								<td><%= account.updated_at %></td>
								<td><%= link_to "Show", account_path(account), :class => "btn btn-success btn-sm btn-flat", :rel => "tabs" %>
								<%= link_to "Edit", edit_account_path(account), :class => "btn btn-warning btn-sm btn-flat", :rel => "tabs" %> 
								<%= link_to "Delete", account_path(account), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger btn-sm btn-flat", :rel => "tabs" %></td>
							</tr><%end %>
						</tbody>
					</table>
				</div><!-- /.box-body -->
				<div class="box-footer no-padding">
					<p></p>
				</div>
		
			</div><!-- /.box-end -->
			<!-- ========================================== -->
		</section>