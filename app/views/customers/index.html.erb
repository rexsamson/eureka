		<section class="content-header">
			<%= link_to raw("<i class=\"fa fa-plus\" aria-hidden=\"true\"> </i> Create New Customer"), new_customer_path, :class => "btn btn-primary btn-flat "%>
			<ol class="breadcrumb">
				<li>
					<a href="#"><i class="fa fa-dashboard"></i> Home</a>
				</li>
				<li>
					<a href="#">Customers</a>
				</li>
				<li class="active">Index page</li>
			</ol>
		</section><!-- Main content -->
		<section class="content">
			<%= render 'shared/flash' %>
			<!-- ========================================== -->
			<div class="box box-danger">
				<!-- /.box-header -->
				<div class="box-header">
		         <h3  class="box-title">Customers <small>List</small></h3>
		        </div>
				<div class="box-body">
					<table class="table table-bordered table-hover" >
						<thead class="thead"
							<tr>
								<th style="width: 60px">Code</th>
								<th>Customer Name</th>
								<th>Contact Person</th>
								<th style="width: 70px">Status</th>
								<th style="width: 120px">Group</th>
								<th style="width: 110px">Telp</th>
								<th style="width: 90px">Limit Credit</th>
								<th style="width: 80px">Limit Days</th>
								<th style="width: 125px">Action</th>

							</tr>
						</thead>
						<tbody>
							<%@customers.each do |customer| %>
							<tr>
								<td><%= customer.code %></td>
								<td><%= customer.name %></td>
								<td><%= customer.cp %></td>
								<td><span class="label <%= customer.status %>"><%= customer.status %></span></td>
								<td><%= customer.group %></td>
								<td><%= customer.telp %></td>
								<td><%= number_to_currency(customer.climit, precision: 0, unit: "")  %></td>
								<td><%= number_to_currency(customer.dlimit, precision: 0, unit: "") %></td>
								<td>
									<table>
									<tr><td><%= link_to raw("<i class=\"fa fa-print\" aria-hidden=\"true\"></i>"), customer_path(customer), :class => "btn btn-success btn-sm " %></td>
	                                <td><%= link_to raw("<i class=\"fa fa-edit\" aria-hidden=\"true\"></i>"), edit_customer_path(customer), :class => "btn btn-warning btn-sm" %> </td>
	                                <td><%= link_to raw("<i class=\"fa fa-gavel\" aria-hidden=\"true\"> </i>"), customer_path(customer), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger btn-sm" %></td>
	                                </tr>
	                                </table>
                                </td>
							</tr>	
							<%end %>
						</tbody>
					</table>
				</div><!-- /.box-body -->
				<div class="box-footer ">
					<center><%= will_paginate @customers, renderer: BootstrapPagination::Rails, :class => 'pagination pagination-md no-margin' %></center>
				</div>
			</div><!-- /.box-end -->
			<!-- ========================================== -->
		</section>
		