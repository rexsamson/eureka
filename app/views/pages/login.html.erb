<!DOCTYPE html>
<html>
  <%= render 'layouts/partials/head' %>
<body>
    <style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    }
    
    html, body {
      height: 100%;
      background-color: #605ca8;
      font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;
    
      color: white;
    }
    
    .preload * {
      transition: none !important;
    }
    
    label {
      display: block;
      font-weight: bold;
    
      text-transform: uppercase;
    
      margin-bottom: 0.35em;
    }
    
    input[type="text"], input[type="password"] {
      width: 100%;
      border: none;
      padding: 0.5em;
      border-radius: 2px;
      margin-bottom: 0.5em;
      color: #333;
    }
    input[type="text"]:focus, input[type="password"]:focus {
      outline: none;
      box-shadow: inset -1px -1px 3px rgba(0, 0, 0, 0.3);
    }
    
    .button {
      padding-left: 1.5em;
      padding-right: 1.5em;
      padding-bottom: 0.5em;
      padding-top: 0.5em;
      border: none;
      border-radius: 2px;
      background-color: #309b98;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.25);
      color: white;
      box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.45);
    }
    
    small {
      font-size: 1em;
    }
    
    .login--login-submit {
      float: right;
    }
    
    .login--container {
      width: 600px;
      background-color: #605ca8;
      margin: 0 auto;
      position: relative;
      top: 25%;
    }
    
    .login--toggle-container {
      position: absolute;
      background-color: #605ca8;
      right: 0;
      line-height: 2.5em;
      width: 50%;
      height: 120px;
      text-align: right;
      cursor: pointer;
      transform: perspective(1000px) translateZ(1px);
      transform-origin: 0% 0%;
      transition: all 1s cubic-bezier(0.06, 0.63, 0, 1);
      backface-visibility: hidden;
    }
    .login--toggle-container .js-toggle-login {
      font-size: 3.7em;
      font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;
    }
    .login--active .login--toggle-container {
      transform: perspective(1000px) rotateY(180deg);
      background-color: #220072;
    }
    .login--form {
      margin-top:40%;
    }
    .login--username-container, .login--password-container {
      float: left;
      background-color: #605ca8;
      width: 50%;
      height: 120px;
      padding: 0.5em;
    }
    
    .login--username-container {
      transform-origin: 100% 0%;
      transform: perspective(1000px) rotateY(180deg);
      transition: all 1s cubic-bezier(0.06, 0.63, 0, 1);
      background-color: #220072;
      backface-visibility: hidden;
    }
    .login--active .login--username-container {
      transform: perspective(1000px) rotateY(0deg);
      background-color: #605ca8;
    }
    
    footer {
      position: absolute;
      bottom: 12px;
      left: 20px;
    }
    
    </style>
    <script>
    (function() {
      $(function() {
        $(".login--container").removeClass("preload");
        this.timer = window.setTimeout((function(_this) {
          return function() {
            return $(".login--container").toggleClass("login--active");
          };
        })(this), 2500);
        return $(".js-toggle-login").click((function(_this) {
          return function() {
            window.clearTimeout(_this.timer);
            $(".login--container").toggleClass("login--active");
            return $(".login--username-container input").focus();
          };
        })(this));
      });
    }).call(this);
    </script>
    
    <div class='preload login--container'>
      
      <div class='login--form'>
        <div style="margin-left:170px"><%= render 'shared/notif' %></div>
        <div class='login--username-container'>
          <label>Username</label>
          <input autofocus placeholder='Username' type='text'>
        </div>
        <div class='login--password-container'>
          <label>Password</label>
          <input placeholder='Password' type='password'>
          <%= link_to " Login Acura ", signup_path, :class => "btn btn-success btn-md ", :rel => "tabs" %> 
          <%= link_to "Register User", signup_path, :class => "btn btn-primary btn-md", :rel => "tabs" %> 
          <button class='js-toggle-login btn btn-default btn-xs pull-right'><i class="fa fa-refresh  fa-spin fa-fw"></i></button>
        </div>
      </div>
      <div class='login--toggle-container'>
        <small>Login</small>
        <div class='js-toggle-login'><span class="logo-lg"><%= image_tag 'logo-min.png',width: '100px' %><b>ACURA</b></span></a></div>
        <small>Copyright Â© 2017. All rights reserved.</small>
      </div>
    </div>

 </body>
</html>
    