  <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <section class="content-header"  onload="window.print();" >
        <script> window.onload = function() { window.print(); }</script>
      <h1>
        Stock
        <small><%= @stock.code %></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Stocks</a></li>
        <li class="active">View</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="invoice">
      <!-- title row -->
      <div class="row">
        <div class="col-xs-12">
          <center><h2 class="page-header">
            PENGELUARAN / PENERIMAAN GUDANG
            <small class="pull-right"></small>
          </h2>
          </center>
        </div>
        <!-- /.col -->
      </div>
      <!-- info row -->

      <div class="row-sm-12 invoice-info">
        <div class="col-sm-8 invoice-col">
          <address>
            <strong><%= render html: current_user.branch.name.upcase rescue '-' %></strong><br>
            <strong>Keterangan : </strong>
            <%= @stock.description %><br>
            <br>
          </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col pull-right">
          <b>Kode : </b>
          <%= @stock.code %>
          </br>
          <b>Tanggal : </b>
          <%= @stock.date %>
          </br>
          <b>Menu : </b>
          <%= @stock.menu %>
          </br>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      <!-- Table row -->
      <div class="row">
        <div class="col-xs-12 table-responsive">
          <table class="table">
            <thead>
            <tr>
              <th>Kode</th>
              <th>Keterangan</th>
              <th>Qty</th>
            </tr>
            </thead>
            <tbody>
            <% @stock.inventories.each do |inventories| %>   
            <tr>
              <td><%= inventories.code %></td>
              <td><%= inventories.category %></td>
              <td><%= number_to_currency(inventories.quantity, precision: 0, unit: "") %></td>
            </tr>
            <% end %>
            </tbody>
          </table>
          
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
      <!-- this row will not appear when printing -->
      <div class="row no-print">
        <div class="col-xs-12">
          <a href="#" target="_blank" class="btn btn-primary btn-flat"><i class="fa fa-print"></i> Print</a>
          <%= link_to raw("<i class=\"fa fa-times\" aria-hidden=\"true\"></i> Cancel"), stocks_path , :class => "btn btn-danger btn-flat pull-right" %> 
        </div>
      </div>
    </section>
    <!-- /.content -->
    <div class="clearfix"></div>
