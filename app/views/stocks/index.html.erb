		<section class="content-header">
			<%= link_to raw("<i class=\"fa fa-plus\" aria-hidden=\"true\"> </i> Create New Stock"), new_stock_path, :class => "btn btn-primary btn-flat "%>
			<ol class="breadcrumb">
				<li>
					<a href="#"><i class="fa fa-dashboard"></i> Home</a>
				</li>
				<li>
					<a href="#">Stocks</a>
				</li>
				<li class="active">Index page</li>
			</ol>
		</section><!-- Main content -->
		<section class="content">
			<%= render 'shared/flash' %>
			
			<div class="box box-primary">
				<!-- /.box-header -->
				<div class="box-header">
					
		        <h3  class="box-title">Stocks <small>List</small></h3>
		        <div class="pull-right">
					<%= form_tag(stocks_path, :method => "get", id: "search-form") do %>
						<table class="table-search">
							<tr>
								<td class="td-search"><b class="pull-right">Search:</b></td>
								<td class="td-search"><%= text_field_tag :search, params[:search], class: "form-control input-sm search-field" %></td>
							</tr>
						</table>
						<%= submit_tag "search", :style => "display: none;" %>
					<% end %>
				</div>
		        </div>
				<div class="box-body" id="dttable_filter">
				
					<table class="table table-bordered table-hover" >
						<thead class="thead"
							<tr>
								<th style="width: 100px">Code</th>
								<th style="width: 100px">Date</th>
								<th style="width: 70px">Status</th>
								<th style="width: 170px">Menu</th>
								<th>Description</th>
								<th style="width: 125px">Action</th>
							</tr>
						</thead>
						<tbody>
							<%@stocks.each do |stock| %>
							<tr>
								<td><%= stock.code %></td>
								<td><%= stock.date %></td>
								<td><span class="label <%= stock.status %>"><%= stock.status %></span></td>
								<td><%= stock.menu %></td>
								<td><%= stock.description %></td>
								<td>
									<table>
									<tr><td><%= link_to raw("<i class=\"fa fa-print\" aria-hidden=\"true\"></i>"), stock_path(stock), :class => "btn btn-success btn-sm " %></td>
	                                <td><%= link_to raw("<i class=\"fa fa-edit\" aria-hidden=\"true\"></i>"), edit_stock_path(stock), :class => "btn btn-warning btn-sm" %> </td>
	                                <td><%= link_to raw("<i class=\"fa fa-gavel\" aria-hidden=\"true\"> </i>"), stock_path(stock), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger btn-sm" %></td>
	                                </tr>
	                                </table>
                                </td>
							</tr>	
							<% end %>
						</tbody>
					</table>
				

				</div><!-- /.box-body -->
				<div class="box-footer ">
				
				</div>

			</div><!-- /.box-end -->
			
		</section>
		